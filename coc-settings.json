{
  "coc.preferences.formatOnSaveFiletypes": ["rust", "python", "c", "cpp", "js", "jsx", "html", "css"],
   
  // diagnostics
  "diagnostic.refreshOnInsertMode": true,
   
  // clangd
  "clangd.path": "/home/nm/.config/coc/extensions/coc-clangd-data/install/11.0.0/clangd_11.0.0/bin/clangd",
  "clangd.arguments": [
    "--compile-commands-dir=./build"
  ],
  "clangd.enabled": true,

  // haskell language server
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell", "hs"]
    }
  },
   
  // python 
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": [
    "--extension-pkg-whitelist=PyQt5,PySide2",
    "--disable=invalid-name,missing-docstring"
  ],

  // java
   "java.home": "/usr/lib/jvm/java-11-openjdk",
   "java.configuration.runtimes": [
    {
      "name": "JavaSE-1.8",
      "path": "/usr/lib/jvm/java-8-openjdk"
    },
    {
      "name": "JavaSE-11",
      "path": "/usr/lib/jvm/java-11-openjdk",
      "default": true
    }
  ],
  "tsserver.formatOnType": true
}
